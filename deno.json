{
  "tasks": {
    "setup": "deno run --allow-read --allow-write --allow-env scripts/setup.ts",
    "dev": "deno run --watch --allow-net --allow-env --allow-read --allow-write --allow-ffi src/main.ts",
    "start": "deno run --allow-net --allow-env --allow-read --allow-write --allow-ffi src/main.ts",
    "test": "deno run -A scripts/test-quick.ts",
    "test:quick": "deno run -A scripts/test-quick.ts",
    "test:full": "deno run -A scripts/test-full.ts",
    "test:stress": "deno run -A scripts/test-stress.ts",
    "test:unit": "deno test tests/unit/ --allow-net --allow-env --allow-read --allow-write --allow-ffi",
    "test:integration": "deno test tests/integration/ --allow-net --allow-env --allow-read --allow-write --allow-ffi",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/**/*.ts",
    "init": "deno cache --reload src/deps.ts && deno task db:init",
    "db:init": "echo 'Database migrations handled automatically on startup'",
    "db:seed": "deno run --allow-read --allow-write --allow-env --allow-ffi --allow-net src/db/seed.ts",
    "build": "deno compile --allow-net --allow-env --allow-read --allow-write --output=moustache-plucker src/main.ts",
    "register": "deno run --allow-net --allow-env --allow-read src/register-commands.ts",
    "register:global": "deno run --allow-net --allow-env --allow-read src/register-commands.ts",
    "register:guild": "DISCORD_GUILD_ID=${DISCORD_GUILD_ID} deno run --allow-net --allow-env --allow-read src/register-commands.ts",
    
    "docker:build": "docker-compose build --no-cache",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:shell": "docker-compose exec bot sh",
    
    "deploy": "deno run --allow-run --allow-read --allow-write --allow-env scripts/deploy.ts",
    "restart": "deno run --allow-run --allow-net --allow-env scripts/restart.ts",
    "tmux": "bash scripts/start-tmux.sh"
  },
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@db/sqlite": "jsr:@db/sqlite@^0.12.0",
    "discord.js": "npm:discord.js@^14.16.3",
    "@discordjs/builders": "npm:@discordjs/builders@^1.9.0",
    "@discordjs/rest": "npm:@discordjs/rest@^2.4.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true
  },
  "nodeModulesDir": "auto",
  "lint": {
    "include": ["src/"],
    "exclude": ["node_modules/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["src/", "tests/"],
    "exclude": ["node_modules/"],
    "indentWidth": 2,
    "lineWidth": 100,
    "proseWrap": "preserve"
  }
}